@{
  Layout = "_Layout";
}

@using Pattengoods.ViewModels;

@model RegisterViewModel

<h1 class="register-header">Register</h1>

@using (Html.BeginForm(
  "Register",
  "Account",
  FormMethod.Post
))
{
  <div class="form-group">
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(
      user => user.Email,
      new { @class="form-control" }
    )

    @Html.LabelFor(user => user.Password)
    @Html.PasswordFor(
      user => user.Password,
      new { @class="form-control" }
    )

    @Html.LabelFor(user => user.ConfirmPassword)
    @Html.PasswordFor(
      user => user.ConfirmPassword,
      new { @class="form-control" }
    )

    <input
      type="submit"
      value="Register"
      class="btn btn-info"
    >
  </div>
}