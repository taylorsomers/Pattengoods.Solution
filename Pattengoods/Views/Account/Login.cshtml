@{
  Layout = "_Layout";
}

@using Pattengoods.ViewModels;

@model LoginViewModel

<h1>Log In</h1>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(
      m => m.Email,
      new {@class="form-control"}
    )

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(
      m => m.Password,
      new {@class="form-control"}
    )

    <input
      type="submit"
      value="Login"
      class="btn btn-info"
    />
  </div>
}