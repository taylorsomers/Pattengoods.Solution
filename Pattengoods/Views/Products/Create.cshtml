@{
  Layout = "_Layout";
}

@model Pattengoods.Models.Product

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.ProductName)
    @Html.TextBoxFor(model => model.ProductName, new { @class="form-control" })

    @Html.LabelFor(model => model.ProductManufacturer)
    @Html.TextBoxFor(model => model.ProductManufacturer, new { @class="form-control" })

    @Html.LabelFor(model => model.ProductPrice)
    @Html.TextBoxFor(model => model.ProductPrice, new { @class="form-control", @pattern="[0-9]+.[0-9]{2}" })

    @Html.LabelFor(model => model.ProductDescription)
    @Html.TextBoxFor(model => model.ProductDescription, new { @class="form-control" })

    @Html.LabelFor(model => model.ProductExpectedLife)
    @Html.TextBoxFor(model => model.ProductExpectedLife, new { @class="form-control" })

    @Html.LabelFor(model => model.ProductLink)
    @Html.TextBoxFor(model => model.ProductLink, new { @class="form-control" })

    @Html.Label("Select Category:")
    @foreach (var name in ViewBag.CategoryId)
    {
      <label>@name.CategoryTitle</label>
      @Html.CheckBox("categoryId", false, new { @value=name.CategoryId })
    }
  </div>
  <input type="submit" value="Create" class="btn btn-primary" />
}