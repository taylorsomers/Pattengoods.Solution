@using (Html.BeginForm("ModalRegister", "Account", FormMethod.Post))
{
  <div class="form-group">
    <label for="userEmail">Email</label>
    <input
      type="text"
      name="userEmail"
      id="userEmail"
      class="form-control"
    />

    <label for="userPassword">Password</label>
    <input
      type="password"
      name="userPassword"
      id="userPassword"
      class="form-control"
    />

    <label for="userConfirmPassword">Confirm Password</label>
    <input
      type="password"
      name="userConfirmPassword"
      id="userConfirmPassword"
      class="form-control"
    />

    <input
      type="submit"
      value="Register"
      class="btn btn-info"
    />
  </div>
}